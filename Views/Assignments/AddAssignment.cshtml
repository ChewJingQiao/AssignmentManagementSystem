
@{
    ViewData["Title"] = "AddAssignment";
}


<center>
    <h1>Create Assignment Page</h1>
    <br />
    <form asp-action="AddAssignment" method="post">
        <table>
            <tr>
                <th>Assignment ID</th>
                <td><input type="text" name="AssignmentId" placeholder="e.g. A00001" required /></td>
            </tr>
            <tr>
                <th>Assignment Name</th>
                <td><input type="text" name="AssignmentName" placeholder="Mobile Application Development Group Assignment" required /></td>
            </tr>
            <tr>
                <th>Handout Date</th>
                <td><input type="date" name="HandoutDate" required /></td>
            </tr>
            <tr>
                <th>Submission Date</th>
                <td><input type="date" name="SubmissionDate" required /></td>
            </tr>
            <tr>
                <th>Module ID</th>
                <td><input type="text" name="ModuleRefId" placeholder="e.g. M00001" required /></td>
            </tr>

            <tr>
                <td colspan="2" style="text-align:center">
                    <input type="submit" name="submit" value="Create New Assignment" />
                </td>
            </tr>

        </table>
    </form>
</center>

