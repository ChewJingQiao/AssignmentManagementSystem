            </div>
            <div class="form-group">
                <label asp-for="s3Location" class="control-label"></label>
                <input asp-for="s3Location" class="form-control" readonly />
                <span asp-validation-for="s3Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="submitStatus" class="control-label" hidden></label>
                <input value="No" class="form-control" hidden />
                <span asp-validation-for="submitStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mark" class="control-label"></label>
                <input asp-for="mark" class="form-control" type="number" required min="0" max="100"/>
                <span asp-validation-for="mark" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Teammate1" class="control-label"></label>
                <input asp-for="Teammate1" class="form-control" readonly />
                <span asp-validation-for="Teammate1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Teammate2" class="control-label"></label>
                <input asp-for="Teammate2" class="form-control" readonly />
                <span asp-validation-for="Teammate2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Teammate3" class="control-label"></label>
                <input asp-for="Teammate3" class="form-control" readonly />
                <span asp-validation-for="Teammate3" class="text-danger"></span>

                <div class="form-group">
                    <label asp-for="Teammate4" class="control-label"></label>
                    <input asp-for="Teammate4" class="form-control" readonly />
                    <span asp-validation-for="Teammate4" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
