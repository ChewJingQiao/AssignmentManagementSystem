@model IEnumerable<AssignmentManagementSystem.Models.Task>

    @{
    ViewData["Title"] = "CreateTask";
    }


<center>
    <h1>Create Task Page</h1>
    <br />
    <form asp-action="CreateTask" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table>
            <tr>
                <th>Team Assignment ID</th>
                <td><input type="text" name="TeamAssignmentId" placeholder="e.g. 100001" required /></td>
            </tr>
            <tr>
                <th>Assignment ID</th>
                <td><input type="text" name="AssignmentId" placeholder="e.g. A00001" required /></td>
            </tr>
            <tr>
                <th>User ID</th>
                <td><input type="text" name="UserId" required /></td>
            </tr>
            <tr>
                <th>Submission Date</th>
                <td><input type="date" name="SubmissionDate" required /></td>
            </tr>
            <tr>
                <td><input type="text" name="SubmitStatus" value="Not Submitted" hidden /></td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:center">
                    <input type="submit" name="submit" value="Create New Task" />
                </td>
            </tr>
        </table>
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</center>

