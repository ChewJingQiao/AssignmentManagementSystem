@model IEnumerable<AssignmentManagementSystem.Models.Task>
@{
    ViewData["Title"] = "AddTask";
}


<h1>Assign Task</h1>
<p><a asp-controller="Tasks" asp-action="CreateTask" asp-route-taid="@ViewBag.taid" asp-route-aid="@ViewBag.aid">Create Task</a></p>


<table class="table table table-striped table-light">
    <tr>
        <th>Task Id</th>
        <th>Task Name</th>
        <th>Team Assignment ID</th>
        <th>Assignment ID</th>
        <th>User Name</th>
        <th>Submission Date</th>
        <th>Submit Status</th>
        <th>Action</th>
    </tr>
    @foreach (var singledatarow in Model)
    {
        <tr>
            <td>@singledatarow.TaskId</td>
            <td>@singledatarow.TaskName</td>
            <td>@singledatarow.TeamAssignment.TeamAssignmentId</td>
            <td>@singledatarow.AssignmentId</td>
            <td>@singledatarow.Users.firstName</td>
            <td>@singledatarow.SubmissionDate</td>
            <td>@singledatarow.SubmitStatus</td>
            <td>
                <a asp-action="Edit" asp-route-id="@singledatarow.TaskId" asp-route-name="@singledatarow.Users.firstName" >Edit</a> |
                <a asp-action="Details" asp-route-id="@singledatarow.TaskId">Details</a> |
                <a asp-action="Delete" asp-route-id="@singledatarow.TaskId">Delete</a>
            </td>
        </tr>
    }
</table>