@model AssignmentManagementSystem.Models.AssignLecturerModel

    @{
        ViewData["Title"] = "AssignLecturer";
    }

    <h1>Assign Lecturer</h1>

    <h4>Module</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AssignLecturer">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="module.ModuleId" />
                <div class="form-group">
                    <label asp-for="module.ModuleId" class="control-label"></label>
                    <input asp-for="module.ModuleId" class="form-control" />
                    <span asp-validation-for="module.ModuleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="module.ModuleName" class="control-label"></label>
                    <input asp-for="module.ModuleName" class="form-control" />
                    <span asp-validation-for="module.ModuleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <table border="1">
        <tr>
            <th>Lecturer ID</th>
            <th>Lecturer Name</th>
        </tr>
        @foreach (var singledatarow in Model.lecturers)
        {
            <tr>
                <td>@singledatarow.Id</td>
                <td>@singledatarow.lastName</td>
            </tr>
        }

    </table>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }


