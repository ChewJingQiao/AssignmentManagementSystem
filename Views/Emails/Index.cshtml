
@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.msg != "")
{
    <script>alert("@ViewBag.msg");</script>
}

<center>
    <h1>Send Email</h1>
    <br />
    <form asp-action="SendEmail" method="post">
        <table>
            <tr>
                <th>Message</th>
                <td><textarea type="text" name="message" placeholder="Dear students..." required ></textarea></td>
            </tr>

            <tr>
                <td colspan="2" style="text-align:center">
                    <input type="submit" name="submit" value="Send Email" />
                </td>
            </tr>

        </table>
    </form>
</center>
